{
  "parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
  "env": {
    "browser": true
  },
  "rules": {
    "strict": 0,

    "no-param-reassign": "error",
    "react/prefer-stateless-function": "warn",
    "jsx-a11y/no-static-element-interactions": "warn",
    "class-methods-use-this": "warn",

    "arrow-parens": "off",
    "react/prop-types": "off"
  },

  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ]
}